
{{>header}}
<div class="page-wrapper">
{{>admin-lefthandbar}}
		<div class="content-stage">
		<div class="row">
			<div class="col-md-12">
					<h2>{{content.manageUsers}}</h2>
				{{#errors}}
                        <div class="alert alert-danger">{{.}}</div>
                 {{/errors}}
                 {{#messages}}
                        <div class="alert alert-success">{{.}}</div>
                 {{/messages}}
			</div>
		</div>
				<div class="row">
			<div class="col-md-12">
			<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
         		 <tr>
		            <th>#</th>
		            <th>{{content.username}}</th>
		           	<th>{{content.email}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.status}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.role}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.emailStatus}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.tags}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.created}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.updated}}</th>
		           	<th class="hidden-sm hidden-xs">{{content.actions}}</th>
          		</tr>
        		</thead>
			 {{#models}}
			  {{#attributes}}
			  	<tr>
			  		<td>{{id}}</td>
			  		<td>{{username}}</td>
			  		<td>{{email}}</td>
			  		<td class="hidden-sm hidden-xs">
			  		{{#is_active}}
			  		<span class="label label-success">{{content.active}}</span>
			  		{{/is_active}}
			  		{{#is_banned}}
			  		<span class="label label-danger">{{content.banned}}</span>
			  		{{/is_banned}}
			  		{{^is_active}}
			  		<span class="label label-warning">{{content.inActive}}</span>
			  		{{/is_active}}
			  		</td>
			  		<td class="hidden-sm hidden-xs">
			  		{{#is_Admin}}
			  		<span class="label label-primary">{{content.admin}}</span>
			  		{{/is_Admin}}
			  		{{^is_Admin}}
			  		<span class="label label-primary">{{content.user}}</span>
			  		{{/is_Admin}}
			  		</td>
			  		<td class="hidden-sm hidden-xs">
			  			{{#email_confirmed}}
			  		<span class="label label-success">{{content.confirmed}}</span>
			  		{{/email_confirmed}}
			  		{{^email_confirmed}}
			  		<span class="label label-default">{{content.unConfirmed}}</span>
			  		{{/email_confirmed}}
			  		</td>
			  		<td class="hidden-sm hidden-xs">
			  		{{#is_verified}}
			  		<span class="label label-success">{{content.verified}}</span>
			  		{{/is_verified}}
			  		</td>
			  		<td class="hidden-sm hidden-xs">{{createdAt}}</td>
			  		<td class="hidden-sm hidden-xs">{{updatedAt}}</td>
			  		<td><a class="btn btn-info" href="/admin/edit-user/{{id}}">{{content.edit}}<a/></td>
			  	</tr>
			  {{/attributes}}
			  {{/models}}
			</table>
			<ul class="pager">
			{{#lastPage}}
  <li><a href="{{lastPage}}">Previous</a></li>
  {{/lastPage}}{{#nextPage}}
  <li><a href="{{nextPage}}">Next</a></li>
  {{/nextPage}}
</ul>
			</div>


</div></div>


		</div>

</div>

{{>footer}}