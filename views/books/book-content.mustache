<section class="book-stage" data-spy="scroll" data-target="#book-menu">
	<div class="row">
		<div class="col-md-12">		
				{{#chapters}}
					<article class="chapter" data-author="{{attributes.user_id}}" data-id="{{attributes.id}}" data-chapter="{{attributes.chapter}}" id="chapter_{{attributes.chapter}}">
						<h1>{{attributes.title}}</h1>
						<div>{{{attributes.content}}}</div>
					</article>
				{{/chapters}}
				<div class="voting">
				{{#voting}}
					<article class="voting-chapter" data-author="{{attributes.user_id}}" data-id="{{attributes.id}}" data-voting-chapter="next" id="voting_chapter_{{attributes.chapter}}">
						<h1>{{attributes.title}}</h1>
						<div>{{{attributes.content}}}</div>
					</article>
				{{/voting}}
				</div>
		</div>
	</div>
	
</section>