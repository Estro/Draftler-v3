
		<form action="/editprofile" method="post">
			<div class="row">
				<div class="col-md-12">
					<h2>{{content.editProfile}}</h2>
				 {{#errors}}
                        <div class="alert alert-danger">{{.}}</div>
                 {{/errors}}
                 {{#messages}}
                        <div class="alert alert-success">{{.}}</div>
                 {{/messages}}
				</div>
			</div>
			{{#models}}
			<div class="row">
				<div class="col-md-12">
					<div class="textbox-wrap">
						<h4>{{content.myDetails}}</h4>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">		
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.firstName}}</span>
							<input type="text" name="firstname" class="form-control" placeholder="{{content.firstName}}" value="{{first_name}}">
						</div>
					</div>
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.surname}}</span>
							<input type="text" name="surname" class="form-control" placeholder="{{content.surname}}" value="{{last_name}}">
						</div>
					</div>
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.email}}</span>
							<input type="text" name="email" class="form-control" placeholder="{{content.email}}" value="{{email}}">
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.city}}</span>
							<input type="text" name="city" class="form-control" placeholder="{{content.city}}" value="{{city}}">
						</div>
					</div>
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.country}}</span>
							<input type="text" name="country" class="form-control" placeholder="{{content.country}}" value="{{country}}">
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="textbox-wrap">
						<h4>{{content.myBio}}</h4>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="textbox-wrap">
						<div class="input-group">
							<span class="input-group-addon">{{content.shortBio}}</span>
							<textarea name="bio" maxlength="300" class="form-control" placeholder="{{content.shortBio}}">{{bio}}</textarea>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
				<br>
					<button type="submit" class="btn btn-info">{{content.saveChanges}}</button>
					<a href="/changepassword" class="btn btn-info">{{content.changePassword}}</a>
				</div>
			</div>
			{{/models}}
		</form>

