<div class="user-profile-dashboard" data-userId="{{user.id}}">
	<div class="row">
		<div class="col-md-12">
						    {{^confirmed}}
                        <div class="alert alert-info">{{{content.notConfirmed}}}</div>
                        {{/confirmed}}
			 {{#errors}}
                        <div class="alert alert-danger">{{.}}</div>
                 {{/errors}}
                 {{#messages}}
                        <div class="alert alert-success">{{.}}</div>
                 {{/messages}}
			<div class="user-header">
				<span><i class="fa fa-location-arrow"></i> {{^user.city}}{{content.noCity}}{{/user.city}}{{user.city}}, {{^user.country}}{{content.noCountry}}{{/user.country}}{{user.country}}</span>
				<span><i class="fa fa-pencil-square-o"></i>  {{user.points}} {{content.publisherPoints}}</span>
				<span><i class="fa fa-users"></i> {{followers}} {{content.followers}}</span>
				<a class="btn btn-default pull-right" href="profile/editprofile">{{content.editProfile}}</a>
			</div>

		</div>
	</div>
	<div class="row">
		<div class="col-md-8">
			<div class="user-about">
				<h3>{{content.about}} {{user.username}}</h3>
				<p>{{user.bio}}{{^user.bio}}{{user.username}} {{content.noBio}}{{/user.bio}}</p>
			</div>
			<div class="user-feed">
				<h3>{{content.recentActivity}}</h3>
				<div>
					<div class="the-timeline">
						<form role="form" class="post-to-timeline">
							<textarea class="form-control" maxlength="140" style="height: 50px;" placeholder="{{content.postSomething}}" name="comment"></textarea>
							<p class="text-right"><button type="submit" class="btn btn-default" id="comment-submit">{{content.post}}</button></p>
						</form>
						
						<ul>
							
						</ul>
						<div class="pre-loader"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-12">
					<h3><span>{{content.following}}</span> / {{content.books}}</h3>
					<ul class="chapter-submittion">
						<li>
							<img src="http://lorempixel.com/190/120/nature/2">
							<h4 class="ng-binding">THe Wolf Gang</h4>
						</li>
						<li>
							<img src="http://lorempixel.com/190/120/fashion/2">
							<h4 class="ng-binding">Harry potter and the long titled book</h4>
						</li>
						<li>
							<img src="http://lorempixel.com/190/120/nature">
							<h4 class="ng-binding">A Short Tale</h4>
						</li>
						<li>
							<img src="http://lorempixel.com/190/120/nature/3">
							<h4 class="ng-binding">HTML 5 for beginners</h4>
						</li>
						<li>
							<img src="http://lorempixel.com/190/120/fashion">
							<h4 class="ng-binding">John Smith goes fishing</h4>
						</li>
						<li>
							<img src="http://lorempixel.com/190/120/nature/4">
							<h4 class="ng-binding">Evolve</h4>
						</li>
					</ul>
				</div></div>
				<div class="row">
					<div class="col-md-12">
						<h3><span>{{content.following}}</span> / {{content.authors}}</h3>
						{{^following}}
							<p>{{content.noFollowing}}</p>
						
							{{/following}}
						<ul class="follow-list">
							{{#following}}
							<li><a href="/profile/{{attributes.id}}">
								<img src="{{attributes.avatar}}" alt="{{attributes.username}}">
								</a>
							</li>
							{{/following}}
						</ul>
					</div></div>
				</div>
			</div>
		</div>

<div class="modal fade" id="profile-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Profile Image Uploader</h4>
      </div>
      <div class="modal-body">
      <form method="post" enctype="multipart/form-data" id="profile-image-form"> 
       <input type="file" name="image" id="image-input">
      </div>
      <div class="image-loader"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" id="profile-image-form-btn">Upload</button>
      </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->