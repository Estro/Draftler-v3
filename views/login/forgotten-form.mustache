
<div class="row">
    <div class="login-content animated bounceIn">
                    <form  action="/login" method="post">
                        <div class="section-title">
                            <h3>Request a new Password</h3>
                        </div>
                        {{#messages}}
                        <div class="alert alert-danger">{{.}}</div>
                        {{/messages}}
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="text" id="input-login-email" name="email" required="required" class="form-control" placeholder="Enter your email" />
                            </div>
                        </div>
                        <div class="login-form-action clearfix">
                            <div class="pull-left">
                                <span class="checkbox-text pull-left"><a href="/login">Back to login</a></span>
                            </div>
                            <button type="submit" class="btn btn-info pull-right">Send Reset &nbsp; <i class="fa fa-chevron-right"></i></button>
                        </div>
                    </form>
                </div>

</div>
