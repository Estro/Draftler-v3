 {{>header-full}}

<div class="row">
    <div class="login-content animated bounceIn">
                    <form  action="/login" method="post">
                        <input name="refer" style="display:none" type="text" value="{{refer}}">
                        <div class="section-title">
                            <h3>{{content.loginToAccount}}</h3>
                        </div>
                        {{#messages}}
                        <div class="alert alert-danger">{{.}}</div>
                        {{/messages}}
                        {{#info}}
                        <div class="alert alert-success">{{.}}</div>
                        {{/info}}
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="text" id="input-login-email" name="email" class="form-control" placeholder="{{content.emailAddress}}" data-validate="email" />
                            </div>
                             <p class="error-message">{{validation.email}}</p>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input type="password" id="input-login-password" name="pw" class="form-control " placeholder="{{content.password}}" data-validate="value" />
                            </div>
                             <p class="error-message">{{validation.completeField}}</p>
                        </div>
                        <div class="login-form-action clearfix">
                            <div class="pull-left">
                                <span class="checkbox-text pull-left"><a href="/forgot">{{content.forgottenPassword}}</a></span>
                            </div>
                            <button type="submit" class="btn btn-info pull-right">{{content.logIn}} &nbsp; <i class="fa fa-chevron-right"></i></button>
                        </div>
                    </form>
                </div>

</div>
<div class="row">
    <div class="register-prompt animated bounceIn">
                 <p>{{content.noAccount}}</p>
                 <p>{{{content.registerLink}}}</p>
                </div>

</div>

{{>footer}}

