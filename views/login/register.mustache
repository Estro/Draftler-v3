
{{>header-full}}

	

<div class="row">
    <div class="login-content animated bounceIn">
                    <form action="/register" method="post">
                        <div class="section-title">
                            <h3>{{content.signUp}}</h3>
                        </div>
                        {{#messages}}
                        <div class="alert alert-danger">{{.}}</div>
                        {{/messages}}
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon form-username-icon"><i class="fa fa-user"></i></span>
                                <input type="text"  name="un" id="input-login-username" required="required" class="form-control" placeholder="{{content.username}}" data-validate-ajax="username" />
                            </div>
                              <p class="error-message">{{validation.usernameTaken}}</p>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="text"  name="email" id="input-login-email"  required="required" class="form-control" placeholder="{{content.emailAddress}}"  data-validate="email" />
                            </div>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input type="password"  name="pw" id="input-login-password"  required="required" class="form-control " placeholder="{{content.password}}" data-validate="password" />
                            </div>
                              <p class="error-message">{{validation.password}}</p>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input type="password"  name="vpw" id="input-login-password-check" required="required" class="form-control " placeholder="{{content.retypePassword}}" data-validate-match="pw" />
                            </div>
                              <p class="error-message">{{validation.passwordMatch}}</p>
                        </div>
                        <div class="login-form-action clearfix">
                            <button type="submit" class="btn btn-info pull-right">{{content.signUp}} &nbsp; <i class="fa fa-chevron-right"></i></button>
                        </div>
                    </form>
                </div>

</div>
<div class="row">
    <div class="register-prompt animated bounceIn">
                 <p>{{content.alreadyRegistered}}</p>
                 <p>{{{content.loginLink}}}</p>
                </div>

</div>

{{>footer}}