	

<div class="row">
    <div class="login-content animated bounceIn">
                    <form  action="/register" method="post">
                        <div class="section-title">
                            <h3>Sign Up</h3>
                        </div>
                        {{#messages}}
                        <div class="alert alert-danger">{{.}}</div>
                        {{/messages}}
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="text"  name="un" required="required" class="form-control" placeholder="Username" />
                            </div>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input type="password"  name="pw" required="required" class="form-control " placeholder="Password" />
                            </div>
                        </div>
                        <div class="textbox-wrap">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input type="password"  name="vpw" required="required" class="form-control " placeholder="Re-type Password" />
                            </div>
                        </div>
                        <div class="login-form-action clearfix">
                            <button type="submit" class="btn btn-info pull-right">Sign up &nbsp; <i class="fa fa-chevron-right"></i></button>
                        </div>
                    </form>
                </div>

</div>
<div class="row">
    <div class="register-prompt animated bounceIn">
                 <p>Already have an Account?</p>
                 <p>No worrys, <a href="/login">Click Here</a> to sign in</p>
                </div>

</div>